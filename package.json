{
  "name": "serverbuilder",
  "version": "2.0.0",
  "description": "A simple NodeJS/Express server builder",
  "main": "serverbuilder.js",
  "scripts": {
    "start": "node index.js",
    "debug": "DEBUG=true node index.js",
    "test": "mocha --exit",
    "doc:lint": "documentation lint index.js src/**.js",
    "doc:html": "documentation build *.js -f html -o doc/ -a public",
    "doc": "npm run doc:lint && npm run doc:html",
    "lint:js": "eslint -c ./config/.eslintrc.js *.js src/*.js --fix",
    "cc": "cr -c ./config/.complexrc",
    "cc:all": "npm run cc *.js src/*.js",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG.md -s -r 0",
    "version": "npm run changelog && git add CHANGELOG.md",
    "commit": "git-cz",
    "lint:md": "remark . .github -i ./config/.remarkignore",
    "lint": "npm run lint:js && npm run lint:md",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Berkmann18/ServerBuilder.git"
  },
  "keywords": [
    "hash",
    "integrity",
    "node",
    "js",
    "javascript",
    "SHA-256",
    "base64",
    "encode",
    "cli",
    "digest"
  ],
  "author": "Berkmann18",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Berkmann18/ServerBuilder/issues"
  },
  "homepage": "https://github.com/Berkmann18/ServerBuilder#readme",
  "dependencies": {
    "colors": "^1.3.2",
    "external-ip": "^2.0.3",
    "nclr": "^1.2.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "complexity-report": "^1.4.1",
    "cz-adapter-eslint": "^0.1.2",
    "documentation": "^8.1.2",
    "eslint": "^5.8.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "mocha": "^5.2.0",
    "remark-cli": "^6.0.0",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "request": "^2.88.0",
    "semantic-release": "^15.10.6",
    "test-console": "^1.1.0",
    "travis-deploy-once": "^5.0.9"
  },
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-adapter-eslint"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint -c ./config/.eslintrc.js --fix",
      "mocha --exit",
      "git add"
    ],
    "*.md": [
      "remark",
      "git add"
    ]
  }
}
