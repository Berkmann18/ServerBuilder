{
  "name": "serverbuilder",
  "version": "3.2.0",
  "description": "A simple NodeJS/Express server builder",
  "main": "serverbuilder.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "debug": "DEBUG=true node ./dist/index.js",
    "t": "nyc mocha test --exit",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov",
    "test": "snyk test && npm run t && npm run coverage",
    "doc:lint": "documentation lint index.js src/**.ts",
    "doc:html": "documentation build *.js -f html -o doc/ -a public",
    "doc": "npm run doc:lint && npm run doc:html",
    "lint:ts": "eslint -c ./config/.eslintrc.js *.ts src/*.ts test/**.js --fix",
    "cc": "cr -c ./config/.complexrc",
    "cc:all": "npm run cc *.js src/*.ts",
    "commit": "git-cz",
    "lint:md": "remark . .github -i ./config/.remarkignore",
    "lint": "npm run lint:js && npm run lint:md",
    "semantic-release": "semantic-release",
    "prepare": "snyk protect",
    "contribs:add": "all-contributors add",
    "contribs:generate": "all-contributors generate",
    "contribs:check": "all-contributors check",
    "build": "tsc",
    "build:watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Berkmann18/ServerBuilder.git"
  },
  "keywords": [
    "server",
    "http",
    "https",
    "http2",
    "express",
    "builder",
    "cli"
  ],
  "author": {
    "name": "Maximilian Berkmann",
    "email": "maxieberkmann@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Berkmann18/ServerBuilder/issues"
  },
  "homepage": "https://github.com/Berkmann18/ServerBuilder#readme",
  "dependencies": {
    "external-ip": "^2.0.3",
    "nclr": "^2.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/git": "^7.0.5",
    "@semantic-release/npm": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "all-contributors-cli": "^6.1.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "complexity-report": "^1.4.1",
    "conventional-changelog-eslint": "^3.0.1",
    "cz-adapter-eslint": "^0.2.0",
    "documentation": "^11.0.0",
    "eslint": "^5.8.0",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.4.0",
    "get-port": "^5.0.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.0.4",
    "mocha": "^6.1.4",
    "nyc": "^14.0.0",
    "remark-cli": "^6.0.0",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "request": "^2.88.0",
    "semantic-release": "^15.13.16",
    "snyk": "^1.120.1",
    "test-console": "^1.1.0",
    "typescript": "^3.5.1"
  },
  "engines": {
    "node": ">= 8.4.0",
    "npm": ">= 4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-adapter-eslint"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/*.(js|ts)": [
      "eslint -c ./config/.eslintrc.js --fix",
      "mocha --exit",
      "git add"
    ],
    "*.md": [
      "remark",
      "git add"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "branches": 65,
    "functions": 80,
    "lines": 50,
    "statements": 50,
    "include": [
      "*.js",
      "src/**.js"
    ],
    "reporter": [
      "text",
      "text-summary"
    ],
    "cache": true,
    "all": true,
    "watermarks": {
      "branches": [
        75,
        95
      ],
      "functions": [
        80,
        98
      ],
      "lines": [
        75,
        95
      ],
      "statements": [
        75,
        95
      ]
    }
  },
  "optionalDependencies": {
    "express": "^4.16.4"
  }
}
